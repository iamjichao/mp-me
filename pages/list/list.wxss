.container {
  /* height: 100%;
  overflow: auto; */
}

.list-container {
  padding: 10rpx 32rpx;
}

.list-item {
  height: 140rpx;
  background: #fff;
  margin: 20rpx 0;
  padding: 0 30rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  display: flex;
}

.list-item view {
  display: flex;
  align-items: center;
}

.list-item view:nth-child(1) {
  flex: 1;
  font-weight: bolder;
}

.list-item view:nth-child(2) {
  /* width: 240rpx; */
  justify-content: flex-end;
  margin-left: 20rpx;
}

.list-item view:nth-child(2) text {
  min-width: 102rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 50rpx;
  color: #19aad1;
  font-weight: bolder;
  margin: 0 10rpx;
}

.list-item-me {
  height: 140rpx;
  background: #fff;
  margin: 20rpx 0;
  padding: 0 30rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  display: flex;
}

.list-item-me view {
  display: flex;
  align-items: center;
}

.list-item-me view:nth-child(1) {
  width: 90rpx;
}

.list-item-me view:nth-child(1) image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}

.list-item-me view:nth-child(2) {
  flex: 1;
  justify-content: flex-end;
}

.list-item-me view:nth-child(2) text {
  min-width: 132rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 50rpx;
  color: #19aad1;
  font-weight: bolder;
  margin: 0 10rpx;
}

.add-plan-btn {
  position: fixed;
  right: 32rpx;
  bottom: 192rpx;
  z-index: 1000;
  width: 92rpx;
  height: 92rpx;
  border-radius: 92rpx;
  background-color: #fff;
  opacity: 0.9;
}

.add-plan-btn image {
  width: 92rpx;
  height: 92rpx;
  border-radius: 92rpx;
}
