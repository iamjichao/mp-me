.datepicker-header {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #19aad1;
}
.datetype-toggle {
  width: 100%;
  height: 70rpx;
  background: #fff;
  display: flex;
}
.datetype-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #19aad1;
}
.datetype-item:nth-child(1) {
  border-radius: 10rpx 0 0 10rpx;
}
.datetype-item:nth-child(2) {
  border-radius: 0 10rpx 10rpx 0;
}
.datetype-select {
  background: #19aad1;
  color: #fff;
}
.datepicker-content {
  margin: 60rpx 0;
}
picker-view {
  height: 550rpx;
}
picker-view-column {
  text-align: center;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: bolder;
}
.picker-view-selected {
  height: 80rpx;
}
.datepicker-confirm {
  margin-bottom: 30rpx;
}
.datepicker-confirm button {
  border: none;
  background: none;
  background-color: #19aad1;
  font-size: 36rpx;
  color: #fff;
}
